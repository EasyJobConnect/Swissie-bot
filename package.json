{
  "name": "rajat-task-bot",
  "version": "1.0.0",
  "description": "Enterprise-grade 7-day multi-channel support resolution bot",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc --watch",
    "pm2:start": "pm2 start pm2.config.js",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:logs": "pm2 logs"
  },
  "keywords": [
    "bullmq",
